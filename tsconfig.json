{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2020"],
    "module": "node16",
    "moduleResolution": "node16",
    "allowJs": true,
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@data/*": ["./data/*"],
      "@context/*": ["./context/*"],
      "@app/*": ["./app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
